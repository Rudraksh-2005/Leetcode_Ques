class Solution {
public:
    int minPairSum(vector<int>& nums) {
        int n=nums.size();
        int l=0;
        int r=n-1;
        int maxi=INT_MIN;
        sort(nums.begin(),nums.end());
        
        
        while(l<r){
            int sum=nums[l]+nums[r];
            maxi=max(sum,maxi);
            l++;
            r--;
        }

        return maxi;
    }
};
