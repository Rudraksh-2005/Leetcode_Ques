class Solution {
public:
    vector<bool> prefixesDivBy5(vector<int>& nums) {
        int n=nums.size();
        
        vector<bool>ans(n,false);
        int rem=0;
        for(int i=0;i<n;i++){
            rem = (rem * 2 + nums[i]) % 5;  // update remainder
            
            ans[i] = (rem == 0);
        }
        return ans;
    }
};
