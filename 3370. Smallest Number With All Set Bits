class Solution {
public:
    int smallestNumber(int n) {
        int x=1;
        int cnt=0;
        for(int i=1;i<=n;i++){
            x=x*2;
            if(x>n){
                cnt=i;
                break;
            }

        }
        int ans=1;
        for(int j=1;j<=cnt;j++){
            ans=ans*2;
        }

        return ans-1;
    }
};
