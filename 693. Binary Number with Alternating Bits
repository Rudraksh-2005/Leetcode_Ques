class Solution {
public:
    bool hasAlternatingBits(int n) {
        string ans=bitset<32>(n).to_string();

        int a=ans.find_first_not_of('0');
        ans.erase(0,a);

        for(int i=0;i<ans.size()-1;i++){
            if(ans[i]==ans[i+1]){
                return false;
            }
        }

        return true;
    }
};
