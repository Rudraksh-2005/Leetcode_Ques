class Solution {
public:
    int compareVersion(string version1, string version2) {
         std::istringstream stream1(version1), stream2(version2);
        string token1, token2;

        
        while (stream1 || stream2) {
            if (getline(stream1, token1, '.')) {
                while (token1.size() > 1 && token1[0] == '0') {
                    token1 = token1.substr(1);
                }
            } else {
                token1 = "0";  
            }

            if (getline(stream2, token2, '.')) {
                while (token2.size() > 1 && token2[0] == '0') {
                    token2 = token2.substr(1);
                }
            } else {
                token2 = "0"; 
            }

            int num1 = std::stoi(token1);
            int num2 = std::stoi(token2);

            if (num1 > num2) return 1;
            else if (num1 < num2) return -1;
        }

        return 0;
    }
};
