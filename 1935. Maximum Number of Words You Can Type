class Solution {
public:
    int canBeTypedWords(string text, string brokenLetters) {
         stringstream ss(text);
        string word;
        int cnt = 0;

        while (ss >> word) {
            bool canType = true;
            for (char b : brokenLetters) {
                if (word.find(b) != string::npos) { 
                    canType = false;
                    break; 
                }
            }
            if (canType) {
                cnt++;
            }
        }
        return cnt;

    }
};
